<h1>New Teacher Registration Form</h1>

<div id="newWell" class="well">

  <%= form_tag "/users", method: :post do %>
    <div>
      <%= label_tag :name %>
      <%= text_field_tag :name %>
    </div>
    <br>
    <div>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
    <br>
    <div>
      <%= label_tag :password %>
      <%= text_field_tag :password %>
    </div>
    <br>
    <div>
      <%= label_tag :"Confirm Password" %>
      <%= text_field_tag :password_confirmation %>
    </div>
    <div>
    <br>
      <%= submit_tag "Become A Teacher!" %>
    </div>
  <% end %>

</div>